# Enum for magnet status
record(mbbi, "$(P)MAGNETSTATUS")
{
	field("INP", "$(P)STATUS")
    field(SCAN, "1 second")
    field(DTYP, "stream")
	field(ZRVL, 0)
	field(ONVL, 1)
	field(TWVL, 2)
	field(THVL, 3)
	field(FRVL, 4)
	field(ZRST, "")
	field(ONST, "Magnet Is At Room Temperature")
	field(TWST, "Magnet Is Cooling Down")
	field(THST, "Magnet Is At Operating Temperature")
	field(FRST, "A Fault Has Occurred")
}


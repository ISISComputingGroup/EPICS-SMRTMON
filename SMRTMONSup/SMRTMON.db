#
# database file for the HTS magnet Smart Monitor
#
record(bo, "$(P)SIM")
{
    field(SCAN, "Passive")
    field(DTYP, "Soft Channel")
    field(ZNAM, "NO")
    field(ONAM, "YES")
    field(VAL, "$(RECSIM=0)")
    field(PINI, "YES")
}

record(bo, "$(P)DISABLE")
{
    field(DESC, "Disable comms")
    field(PINI, "YES")
    field(VAL, "$(DISABLE=0)")
    field(OMSL, "supervisory")
    field(ZNAM, "COMMS ENABLED")
    field(ONAM, "COMMS DISABLED")
}

# Buffer for STAT, LIMS and OPLM commands
record(calc, "$(P)STATBUFFER")
{
	field(CALC, "0")
}

record(calc, "$(P)LIMSBUFFER")
{
	field(CALC, "0")
}

record(calc, "$(P)OPLMBUFFER")
{
	field(CALC, "0")
}

# STAT, LIMS and OPLM commands
record(ai, "$(P)STAT")
{
	field(INP, "@SMRTMON.proto getStat() $($(P)STATBUFFER) $(PORT)")
    field(SCAN, "1 second")
    field(DTYP, "stream")
    field(SIML, "$(P)SIM")
    field(SIOL, "$(P)SIM:STAT")
    field(SDIS, "$(P)DISABLE")
}
record(ai, "$(P)LIMS")
{
	field(INP, "@SMRTMON.proto getLims() $($(P)LIMSBUFFER) $(PORT)")
    field(SCAN, "1 second")
    field(DTYP, "stream")
    field(SIML, "$(P)SIM")
    field(SIOL, "$(P)SIM:LIMS")
    field(SDIS, "$(P)DISABLE")
}
record(ai, "$(P)OPLM")
{
	field(INP, "@SMRTMON.proto getOplm() $($(P)OPLMBUFFER) $(PORT)")
    field(SCAN, "1 second")
    field(DTYP, "stream")
    field(SIML, "$(P)SIM")
    field(SIOL, "$(P)SIM:OPLM")
    field(SDIS, "$(P)DISABLE")
}

